apiVersion: v1
kind: PersistentVolume
metadata:
  name: tezos-var-volume
  labels:
    storage-type: var-files
spec:
  capacity:
    storage: 15Gi
  accessModes:
  - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  storageClassName: manual
  nfs:
    path: {tezos_dir}
    server: {minikube_ip}
